# Configuración de la Aplicación ThreatAnalyzer

# Configuración de Rate Limiting
# Límite de peticiones por minuto por IP
RATE_LIMIT_PER_MINUTE=30

# Configuración de Caché WHOIS
MAX_CACHE_SIZE=1000

# Configuración de Caché de Análisis (URLs, emails, SMS)
MAX_ANALYSIS_CACHE_SIZE=500

# Configuración de Timeouts (en segundos)
TIMEOUT_SSL=5
TIMEOUT_HTTP=10

# Configuración de Logging
LOG_LEVEL=INFO

# Configuración de Flask
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000

# Configuración de Mail.tm API
MAIL_TM_URL=https://api.mail.tm

# User-Agent para peticiones HTTP
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/143.0.0.0 Safari/537.36

# Límites de tamaño de entrada
MAX_URL_LENGTH=2048
MAX_EMAIL_SIZE_MB=10
MAX_SMS_LENGTH=10000
MAX_WORDS_FOR_SPELLCHECK=500

# Configuración de Google AI Studio (Gemma 3)
# API Key de Google AI Studio (obtener en https://aistudio.google.com/apikey)
GOOGLE_AI_API_KEY=tu_api_key_de_google_ai_studio_aqui
GOOGLE_AI_MODEL=gemma-3-27b-it
GOOGLE_AI_TIMEOUT=30

# ============================================================================
# SERVICIOS DE ANÁLISIS DE URLS (GRATUITOS)
# ============================================================================
# Estos servicios se usan para analizar la reputación de URLs

# URLScan.io API Key (opcional pero recomendado)
# Obtener en: https://urlscan.io/user/signup (gratis, 100 escaneos/día sin key, más con cuenta)
URLSCAN_API_KEY=

# Google Safe Browsing API Key (recomendado)
# Obtener en: https://console.cloud.google.com/apis/credentials
# Gratis: 10,000 consultas/día
GOOGLE_SAFE_BROWSING_API_KEY=

# AbuseIPDB API Key (opcional)
# Obtener en: https://www.abuseipdb.com/pricing (gratis: 1,000 consultas/día)
ABUSEIPDB_API_KEY=

# PhishTank API Key (opcional, funciona sin key)
# Obtener en: https://www.phishtank.com/api_register.php
PHISHTANK_API_KEY=

# Servicios alternativos habilitados (separados por comas)
# Opciones: urlscan, googlesb, abuseipdb, phishtank
# Por defecto: urlscan,googlesb,phishtank
ENABLED_ALTERNATIVES=urlscan,googlesb,phishtank

# Timeout para servicios alternativos (segundos)
TIMEOUT_ALTERNATIVES=10

# API Keys de VirusTotal (separadas por comas)
VT_API_KEYS=